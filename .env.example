# Postgres
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/ragdb

# Embedding model (defaults to all-MiniLM-L6-v2 if unset)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Optional LLM (OpenAI). If not set, API returns extracted context instead of generation.
#OPENAI_API_KEY=
#OPENAI_MODEL=gpt-4o-mini
#MAX_CONTEXT_CHARS=4000

GEMINI_API_KEY=
GEMINI_MODEL=

# RAG settings
TOP_K=5
MIN_SCORE=0.0
CHUNK_SIZE=800
CHUNK_OVERLAP=120